<div class="Container">
  <h1 class="PageBanner">My Custom Themes</h1>

  <% if @custom_themes.size <= 0 %>
    <p>You have no custom themes.</p>
  <% end %>

  <p>
    <%= link_to "Create a Custom Theme", new_custom_theme_path, class: "SlantButton" %>
  </p>

  <div class="AdventureList">
    <% @custom_themes.each do |custom_theme| %>
      <div class="card">
        <%= link_to custom_theme do %>
          <div class="card-image">
            <iframe src="<%= custom_theme_path(custom_theme) %>"></iframe>
          </div>
        <% end %>

        <div class="card-container">
          <%= link_to custom_theme_path(custom_theme) do %>
            <div class="card-title">
              <%= custom_theme %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
